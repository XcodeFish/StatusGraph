{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ESNext", "ES2017.Object", "ES2015.Collection"],
    "baseUrl": ".",
    "paths": {
      "@statusgraph/core": ["packages/core/src"],
      "@statusgraph/shared": ["packages/shared/src"],
      "@statusgraph/browser-extension": ["packages/browser-extension/src"]
    }
  },
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}